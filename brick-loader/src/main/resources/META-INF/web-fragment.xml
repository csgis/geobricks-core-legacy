<?xml version="1.0" encoding="UTF-8"?>
<web-fragment version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">
	<!-- Guice filter -->
	<filter>
		<filter-name>guiceFilter</filter-name>
		<filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>guiceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Load all the plugins -->
	<listener>
		<listener-class>de.csgis.geobricks.config.PluginListener</listener-class>
	</listener>

	<!-- Configured application -->
	<listener>
		<listener-class>de.csgis.geobricks.config.ApplicationListener</listener-class>
	</listener>

	<!-- Guice modules configuration -->
	<listener>
		<listener-class>de.csgis.geobricks.guice.GuiceServletConfig</listener-class>
	</listener>
</web-fragment>
